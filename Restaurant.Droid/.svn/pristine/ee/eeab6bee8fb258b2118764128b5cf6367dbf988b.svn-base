                    android:layout_height="wrap_content"
                    android:text="Deals of the day"/>

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/whtsnewitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
